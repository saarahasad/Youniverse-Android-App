<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="#B2DFDB"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView android:id="@+id/link_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Food and Fun"
            android:gravity="center"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location "  android:textColor="@color/white"

            android:layout_marginTop="12dp"
            android:textSize="16dp"

            />

        <fragment
            android:id="@+id/food_place_autocomplete_fragment"
            android:layout_marginTop="20dp"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="match_parent"
            tools:context="com.example.apple.Youniverse.FoodFragment"
            android:layout_height="wrap_content"
            android:textSize="20dip"

            />

        <!--

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:singleLine="true"
                android:hint="Location" />

        </android.support.design.widget.TextInputLayout>

-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuisines "
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            />

        <RadioGroup
            android:id="@+id/cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/indian"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="Indian"
                />

            <RadioButton
                android:id="@+id/chinese"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="Chinese"

                />

            <RadioButton
                android:id="@+id/italian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:textColor="@color/white"
                android:text="Italian"

                />

            <RadioButton
                android:id="@+id/mexican"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:textColor="@color/white"
                android:text="Mexican"

                />

            <RadioButton
                android:id="@+id/thai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:textColor="@color/white"
                android:text="Thai"

                />

            <RadioButton
                android:id="@+id/arab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:textColor="@color/white"
                android:text="Arab"

                />
        </RadioGroup>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price range"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            />

        <RadioGroup
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="Low"
                />

            <RadioButton
                android:id="@+id/moderate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:checked="false"
                android:text="Moderate"

                />

            <RadioButton
                android:id="@+id/high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:checked="false"
                android:text="High"

                />

        </RadioGroup>


